<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
    <format>tar.bz2</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <fileSets>
    <fileSet>
      <directory>target/maven-shared-archive-resources/META-INF</directory>
      <outputDirectory>/</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <lineEnding>dos</lineEnding>
      <includes>
        <include>README.txt</include>
        <include>LICENSE.txt</include>
        <include>DEPENDENCIES.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>org.jomc:jomc-api</include>
        <include>org.jomc:jomc-spi</include>
        <include>org.jomc:jomc-model</include>
        <include>org.jomc:jomc-ri</include>
        <include>org.jomc:jomc-sdk</include>
        <include>org.jomc:jomc-standalone</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <outputDirectory>lib/logging</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>org.jomc.logging:jomc-logging-api</include>
        <include>org.jomc.logging:jomc-logging-jdk-logging</include>
        <include>org.jomc.logging:jomc-logging-commons-logging</include>
        <include>org.jomc.logging:jomc-logging-log4j-logging</include>
        <include>org.jomc.logging:jomc-logging-slf4j-logging</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <outputDirectory>lib/sequences</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>org.jomc.sequences:jomc-sequences-api</include>
        <include>org.jomc.sequences:jomc-sequences-spi</include>
        <include>org.jomc.sequences:jomc-sequences-model</include>
        <include>org.jomc.sequences:jomc-sequences-ri</include>
        <include>org.jomc.sequences:jomc-sequences-utilities</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <scope>runtime</scope>
      <unpack>true</unpack>
      <includes>
        <include>org.jomc:jomc-tools:zip:bin</include>
        <include>org.jomc.logging:jomc-logging-it:zip:bin</include>
        <include>org.jomc.sequences:jomc-sequences-it:zip:bin</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <scope>runtime</scope>
      <outputDirectory>jomc-sequences-it-${jomcSequencesVersion}</outputDirectory>
      <includes>
        <include>org.jomc.sequences:jomc-sequences-ear</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
