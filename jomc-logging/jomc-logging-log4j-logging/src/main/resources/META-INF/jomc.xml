<module xmlns="http://jomc.org/model"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jomc.org/model http://www.jomc.org/jomc-model/jomc-1.0.xsd"
        name="${pom.name}"
        version="${pom.version}"
        vendor="${pom.organization.name}"
        modelVersion="1.0">

  <documentation defaultLanguage="en">
    <text language="en"><![CDATA[${pom.description}]]></text>
  </documentation>

  <implementations>
    <!-- ******************************************************************* -->
    <implementation identifier="org.jomc.logging.ri.log4j.Log4JLogger"
                    class="org.jomc.logging.ri.log4j.Log4JLogger"
                    name="${pom.name}"
                    version="${pom.version}"
                    vendor="${pom.organization.name}">

      <documentation defaultLanguage="en">
        <text language="en"><![CDATA[${pom.description}]]></text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@schulte.it"
                createDate="2005-07-25T19:56:45Z"/>

      </authors>
      <specifications>
        <reference identifier="org.jomc.logging.Logger" version="1.0"/>
      </specifications>
    </implementation>

    <!-- ******************************************************************* -->
    <implementation identifier="org.jomc.logging.ri.log4j.Log4JObjectManagementListener"
                    class="org.jomc.logging.ri.log4j.Log4JObjectManagementListener"
                    name="${pom.name}"
                    version="${pom.version}"
                    vendor="${pom.organization.name}">

      <documentation defaultLanguage="en">
        <text language="en"><![CDATA[{@code ObjectManagementLister} backed by Log4J logging.]]></text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@schulte.it"
                createDate="2005-07-25T19:56:45Z"/>
      </authors>
      <specifications>
        <reference identifier="org.jomc.spi.Listener" version="1.0"/>
      </specifications>
      <dependencies>
        <dependency name="Logger" identifier="org.jomc.logging.Logger"
                    version="1.0" bound="true"
                    implementationName="${pom.name}">

          <properties>
            <property name="name" value="org.jomc.ObjectManager"/>
          </properties>
        </dependency>
      </dependencies>
    </implementation>
  </implementations>
</module>
